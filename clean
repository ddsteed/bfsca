#!/usr/bin/env  bash
#-----------------------------------------------------------------------
# This shell script is to clean the working scatch and the store 
# directory 
#
#  RDS (Hao Feng)
#  Jul 20, 2013
#
#-----------------------------------------------------------------------
function clean_work {
    echo -n " Please specify the working scratch directory, [./work]: "
    read work

    if [[ $work == "" ]]; then	work="$currpath/work"; fi
    if [ ! -d $work ]; then 
	echo "no work directory found!"
	exit
    else
	cd $work
	rm -f *
    fi
}

