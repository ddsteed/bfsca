#-----------------------------------------------------------------------
function clean_store {
    echo -n " Please specify the store dirctory, [./store]: "
    read store

    if [[ $store == "" ]]; then	store="$currpath/store"; fi
    if [ ! -d $store ]; then 
	echo "no store directory found!"
	exit
    fi
    cd $store
    store=`pwd`
    store_name
    for dir in ${st[@]}; do
	cd $dir
	echo "directory = $dir ..."
	echo $dir | grep -q "DATA_IN"
	if [ $? -eq 0 ]; then
	    cd $store
	else
	    rm -f *
	    cd $store
	fi
    done
    cd $currpath
}

#-----------------------------------------------------------------------
#--- main function

currpath=`pwd`
clean_work
clean_store

